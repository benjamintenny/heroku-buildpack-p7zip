#!/bin/sh

echo "-----> Installing heroku buildpack p7zip"
BUILD_DIR=$1
mkdir -p "$BUILD_DIR/vendor"
VENDOR_DIR="$BUILD_DIR/vendor"
curl "https://www.7-zip.org/a/7z2107-linux-x64.tar.xz" -s -o - | tar xvf - -C "$VENDOR_DIR"
mv "$VENDOR_DIR/p7zip_9.20.1" "$VENDOR_DIR/p7zip"
PROFILE_PATH="$BUILD_DIR/.profile.d/7zz.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/p7zip/bin"' >> $PROFILE_PATH

echo "-----> Done."
